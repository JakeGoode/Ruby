<h1>Sign In / Sign Up</h1>
<!-- View not used -->
<h2>Sign In</h2>
<%= form_with model: @user, url: users_path, local: true do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit 'Sign In' %>
<% end %>

<h2>New User? Sign Up!</h2>
<%= form_with model: User.new, url: users_path, local: true do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit 'Sign Up' %>
<% end %>
