<h1>Sign In / Sign Up</h1>

<!-- Display sign in or sign up errors -->
<% if @error_message %>
  <div class='alert alert-danger'>
    <%= @error_message %>
  </div>
<% end %>

<h2>Sign In</h2>
<%= form_tag sign_in_path, method: :post do %>
  <%= label_tag :email, 'Email:' %>
  <%= text_field_tag :email, nil, placeholder: 'Email' %><br>
  
  <br><%= label_tag :password, 'Password:' %>
  <%= password_field_tag :password, nil, placeholder: 'Password' %><br>
  <br><%= submit_tag 'Sign In' %>
<% end %>

<h2>Sign Up</h2>
<%= form_with url: sign_up_path, method: :post, scope: :user do |form| %>
  <%= label_tag :username, 'Username:' %>
  <%= form.text_field :username, placeholder: 'Username' %><br>
  
  <br><%= label_tag :email, 'Email:' %>
  <%= form.text_field :email, placeholder: 'Email' %><br>
  
  <br><%= label_tag :password, 'Password:' %>
  <%= form.password_field :password, placeholder: 'Password' %><br>
  <br><%= form.submit 'Sign Up' %>
<% end %>